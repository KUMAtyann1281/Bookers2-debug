<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info' %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @book_new %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <tr>
          <td>
            <%= link_to user_path(@user.id) do %>
              <%= image_tag user.get_profile_image, size:"100x100" %><br>
              <%= user.name %>
            <% end %>
          </td>
          <td><%= link_to book.title, book_path(@user.id) %></td>
          <td><%= book.body %></td>
            <td>
              <% if user == current_user %>
                <%= link_to 'Edit', edit_book_path(@user), class: "btn btn-sm btn-success" %>
              <% end %>
            </td>
            <td>
              <% if user == current_user %>
                <%= link_to 'Destroy', book_path(@user.id), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger" %>
              <% end %>
            </td>
        </tr>
      </table>
    </div>
  </div>
</div>