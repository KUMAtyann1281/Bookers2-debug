<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: @user %>
      <h2>New book</h2>
      <%= render 'form', book: @book_new %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Book detail</h2>
      <table class='table'>
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(@user.id) do %>
                <%= image_tag @user.get_profile_image, size:'100x100' %><br/>
                <%= @user.name %>
              <% end %>
            </td>
            <td><%= link_to @book.title, book_path(@book.id) %></td>
            <td colspan="2"><%= @book.body %></td>
            <td>
              <% if @book.favorited_by?(current_user) %>
                <p>
                  <%= link_to book_favorite_path(@book), method: :delete do %>
                    <span style="color: red;">
                      ♥<%= @book.favorites.count %>
                    </span>
                  <% end %>
                </p>
                <% else %>
                <p>
                  <%= link_to book_favorite_path(@book), method: :post do %>
                    ♥<%= @book.favorites.count %>
                  <% end %>
                </p>
              <% end %>
            </td>
            <td><%= " コメント数: #{@book.book_comments.count}" %></td>
            <td class="action-links">
              <% if @user.id == current_user.id %>
                <%= link_to "Edit", edit_book_path(@book) %>
              <% end %>
            </td>
            <td class="action-links">
              <% if @user.id == current_user.id %>
                <%= link_to "Destroy", book_path(@book.id), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger" %>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
      <% @book.book_comments.each do |book_comment| %>
        <div class="d-flex align-items-center">
          <div>
            <%= image_tag book_comment.user.get_profile_image, size:'100x100' %></br>
            <%= book_comment.user.name %>
          </div>
          <div>
            <p><%=book_comment.comment %></p>
          </div>
          <div>
            <% if book_comment.user == current_user %>
              <%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete, class: "btn btn-sm btn-danger" %>
            <% end %>
          </div>
        </div>
      <% end %>
      <div>
        <%= form_with model: [@book, @book_comment] do |f| %>
          <%= f.text_area :comment, rows: '5', placeholder: "コメントをここに" %>
          <%= f.submit "送信する" %>
        <% end %>
      </div>
    </div>
  </div>
</div>